{% set isCancelable = false %}
{% if Order.OrderStatus is not empty and Order.OrderStatus.id is constant('Plugin\\UnivaPay\\Entity\\Master\\UnivaPayOrderStatus::UNIVAPAY_SUBSCRIPTION') %}
    {% set isCancelable = true %}
{% endif %}

<script>
    $(function () {
        // ページ最下部に移動
        $('#univapay-info').appendTo($('#form1 > div.c-contentsArea__cols > div > div'));

        $('#univapay-action__cancel').on('click', function () {
            $('#univapay-info__body button').prop('disabled', true);
            $.ajax({
                type: 'DELETE',
                url: '{{ url('univa_pay_admin_subscription_cancel', { id: Order.id }) }}',
                data: {action: "cancel"}
            }).always(function () {
                location.reload();
            });
        });
    });
</script>

<div class="d-none">
    <div id="univapay-info" class="card rounded border-0 mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <span class="card-title">{{ 'univa_pay.admin.order_edit.title'|trans }}</span>
                </div>
                <div class="col-4 text-right">
                    <a data-toggle="collapse" href="#univapay-info__body" aria-expanded="false" aria-controls="univapay-info__body"><i class="fa fa-angle-up fa-lg"></i></a>
                </div>
            </div>
        </div>
        <div class="collapse show ec-cardCollapse" id="univapay-info__body">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-2"><span>{{ 'univa_pay.admin.order_edit.subscription_id'|trans }}</span></div>
                    <div class="col" id="univapay-subscription">{{ Order.univa_pay_subscription_id }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-2"><span>{{ 'univa_pay.admin.order_edit.payment_action'|trans }}</span></div>
                    <div class="col">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <button id="univapay-action__cancel" type="button" class="btn btn-ec-regular px-5" {% if not isCancelable %} disabled {% endif %}>
                                    {{ 'univa_pay.admin.order_edit.payment_action_cancel'|trans }}
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
